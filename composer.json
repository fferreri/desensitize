{
  "name": "waryor/desensitize",
  "description": "A Laravel library for desensitizing routes.",
  "keywords": [
    "waryor",
    "desensitize",
    "laravel",
    "routes"
  ],
  "homepage": "https://github.com/waryor/desensitize",
  "license": "MIT",
  "authors": [
    {
      "name": "Felix Deibert",
      "email": "felix.deibert@waryor.com",
      "homepage": "https://waryor.com",
      "role": "Developer"
    },
    {
      "name": "Christoph Heich",
      "email": "christoph.heich@waryor.com",
      "homepage": "https://waryor.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php" : "^8.0|^8.1",
    "laravel/framework": "^8.0|^9.0"
  },
  "require-dev": {
    "phpunit/phpunit": "9.5.19",
    "fakerphp/faker": "^1.19"
  },
  "autoload": {
    "psr-4": {
      "Waryor\\Desensitize\\": "src"
    }
  }, 
  "autoload-dev": {
        "psr-4": {
            "Waryor\\Desensitize\\Tests\\": "tests/"
        }
    },

  "extra": {
    "laravel": {
      "providers": [
        "Waryor\\Desensitize\\DesensitizeServiceProvider"
      ]
    }
  },
  "scripts": {
    "test" : [
      "@php ./vendor/bin/phpunit --testdox"
    ]
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
